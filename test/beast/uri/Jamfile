local SOURCES =
    buffer.cpp
    input.cpp
    make_shared.cpp
    parse.cpp
    parts.cpp
    scheme.cpp
    uri.cpp
    view.cpp
    ;

local RUN_TESTS ;

for local f in $(SOURCES)
{
    RUN_TESTS += [ run $(f) $(TEST_MAIN) ] ;
}

alias run-tests : $(RUN_TESTS) ;

exe fat-tests : $(TEST_MAIN) $(SOURCES) ;

explicit fat-tests ;
